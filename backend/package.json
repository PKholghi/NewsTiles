{
  "name": "newstiles-app-backend",
  "version": "1.0.0",
  "description": "NewsTiles application backend with nodejs mongodb expressjs typescript",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/src/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon src/server.ts",
    "watch": "tsc -w & nodemon src/server.ts",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "eslint src/**/*.ts{,x}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Balraj, Danyaal, Darren, Pedrum",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.5.0",
    "mongoose": "^5.12.7",
    "morgan": "^1.10.0"
  }
}
